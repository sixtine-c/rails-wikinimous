<%= link_to 'Add a new article', new_article_path(@article) %>

<div class="container">

<ul>
  <% @articles.each do |article| %>
    <div class="article-list">
      <li class = main-li> <%=  link_to article.title, article_path(article) %> </li>
      <li><%= article.content %></li>
    </div>

    <% end %>
</ul>
</div>
